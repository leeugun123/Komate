<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kkanbu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="깐부 kkanbu"
            android:textSize="20sp"
            android:textFontWeight="700"
            android:textAppearance="@style/kkanbuLogin"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:src="@drawable/seoultech_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울과학기술대학교"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAppearance="@style/schoolText"
                android:lineSpacingExtra="9sp"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/seoultech_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/hi"
                />


            <TextView
                android:id="@+id/userName"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:text="Kkanbu"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="@style/nametext"
                />


        </LinearLayout>



    </LinearLayout>






</LinearLayout>